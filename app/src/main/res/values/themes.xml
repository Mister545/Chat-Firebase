<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Базова тема застосунку -->
    <style name="Base.Theme.ChatFirebase" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Основні кольори -->
    <style name="MAIN">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:colorPrimary">@color/scroll_fab</item>
        <item name="android:colorBackground">@color/settings_background</item>
    </style>

    <!-- Панель навігації -->
    <style name="NAVIGATION_PANEL">
        <item name="android:colorPrimaryDark">@color/nav_header_background</item>
        <item name="android:background">@color/drawer_background</item>
    </style>

    <!-- Дата пікер -->
    <style name="DATE_PICKER">
        <item name="android:colorAccent">@color/date_picker_button</item>
        <item name="android:background">@color/date_picker_layout_background</item>
    </style>

    <!-- Scroll -->
    <style name="SCROLL">
        <item name="android:colorPrimary">@color/scroll_toolbar</item>
        <item name="android:colorAccent">@color/scroll_fab</item>
    </style>

    <!-- Налаштування -->
    <style name="SETTINGS">
        <item name="android:textColor">@color/settings_text_blue</item>
        <item name="android:textColorHighlight">@color/settings_text_red</item>
        <item name="android:textColorPrimary">@color/settings_nickname</item>
        <item name="android:background">@color/settings_background</item>
    </style>

    <!-- Нова група -->
    <style name="NEW_GROUP">
        <item name="android:background">@color/new_grope_background</item>
        <item name="android:colorForeground">@color/new_grope_item_background</item>
        <item name="android:textColorSecondary">@color/new_grope_text_gray</item>
    </style>

    <!-- Додавання нової групи -->
    <style name="ADD_NEW_GROUP">
        <item name="android:background">@color/add_new_grope_background</item>
        <item name="android:colorForeground">@color/add_new_grope_item_background</item>
        <item name="android:textColorSecondary">@color/add_new_grope_text_gray</item>
    </style>

    <!-- Головна тема застосунку -->
    <style name="Theme.ChatFirebase" parent="Base.Theme.ChatFirebase" />

    <style name="Theme.ChatFirebase.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ChatFirebase.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChatFirebase.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
